rules_version = '2';
service cloud.firestore {
    match /databases/{database}/documents {
    match /admin/{admin} {
      allow read: if true;
    }


    //student
    match /student/{studentId} {
      allow create: if request.auth == null;
    }
    match /student/{studentId} {
      allow update: if request.auth != null && exists(/databases/$(database)/documents/student/$(request.auth.uid))
    }
    match /GPlibrary/{doc} {
      allow create, update: if request.auth != null && exists(/databases/$(database)/documents/student/$(request.auth.uid))
    }
    match /gpcategory/{doc} {
      allow create, update: if request.auth != null && exists(/databases/$(database)/documents/student/$(request.auth.uid))
    }
    match /faculty/{document=**} {
      allow create, update: if request.auth != null && exists(/databases/$(database)/documents/student/$(request.auth.uid))
    }


    //faculty
    match /faculty/{facultyId} {
      allow create: if request.auth == null;
    }
 match /commonissue/{document=**} {
      allow create, update, delete: if request.auth != null && exists(/databases/$(database)/documents/faculty/$(request.auth.uid))
    }
//for sign up 
    match /department/{document=**} {
      allow read: if true
    }
    match /semester/{document=**} {
      allow read: if true
    }
    match /facultyspeciality/{document=**} {
      allow read: if true
    }
    //all
    match /{document=**} {
      //only allow authniticated users who is in admin/student/faculty collections
      allow create, update: if request.auth != null && exists(/databases/$(database)/documents/faculty/$(request.auth.uid))
      allow create, update, delete: if request.auth != null && exists(/databases/$(database)/documents/admin/$(request.auth.uid))
      allow read: if request.auth != null && (exists(/databases/$(database)/documents/student/$(request.auth.uid)) || exists(/databases/$(database)/documents/faculty/$(request.auth.uid)) || exists(/databases/$(database)/documents/admin/$(request.auth.uid)))
    }
  }
}
